
@{
    ViewData["Title"] = "Admin Product View";
}
<head>
    <link rel="stylesheet" href="~/css/bootsWatch.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/ecommerce_web.styles.css" asp-append-version="true" />
    <style>
        span a{
            margin-right:2rem;
        }
    </style>
</head>
<body>
    <partial name="_AdminNavbar"/>    
    
    <div class="container pt-2 pb-5 px-5">
        <hr class="border border-dark border-1 ">
        <h1 class="mb-2 ms-3 row">Product</h1>
        <hr class="border border-dark border-1 ">
                <div class="row mb-4 mt-3" style=float:right;>
            <span>
                <a asp-area="" asp-controller="Product" asp-action="AdminProductInsert" style="text-decoration:none;">
                    <button class="btn btn-danger p-2"><i class="bi bi-plus-circle"></i> &nbsp; Add Product</button>
                </a>
               
            </span>
        </div>  
        <table class="table table-hover table-bordered" id="dataTable">
            <thead>
                <tr class="table-dark">
                    <th scope="col">Product ID</th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Quantity</th>
                    <th></th>
                </tr>            
            </thead>
        </table>     
    </div>
</body>

@section Scripts{
    <script src="~/js/product3.js"></script>
    <script>
   $("#topBar").hide();
    </script>
}