@model Inventory;
@{
    ViewData["Title"] = "Admin - Product Update";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/bootsWatch.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    @* <link rel="stylesheet" href="~/ecommerce_web.styles.css" asp-append-version="true" /> *@
    <style>
        span a{
            margin-right:2rem;
        }
    </style>
</head>
<body>
    <partial name="_AdminNavbar"/>
    <div class="container border border-secondary pt-4 pb-5 px-5 mt-5" style="border-radius:5px; box-shadow: 10px 10px lightgrey;">
        <h1 class="row">Edit Product</h1>
        <hr class="mb-5 ">
        <div>
        <form method="post" enctype="multipart/form-data">
        <div class="row">
            @* <div class="my-2 col-6">
                <label asp-for="Id" class="mb-3">Product ID</label>
                <input asp-for="Id" class="form-control"/>
                <span asp-validation-for="Id" class="text-primary mb-2"></span>
            </div> *@
            <div class="my-2 col-6">
                <label asp-for="Name" class="mb-3">Product Name</label>
                <input asp-for="Name" class="form-control"/>                
                <span asp-validation-for="Name" class="text-primary mb-2"></span>
            </div>
            <div class="my-2 col-6">
                <label asp-for="FullName" class="mb-3">Product FullName</label>
                <input asp-for="FullName" class="form-control"/>                
                <span asp-validation-for="FullName" class="text-primary mb-2"></span>
            </div>
        </div>
            <div class="my-2">
                <label asp-for="Description" class="mb-3">Product Description</label>
                <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-primary mb-2"></span>
            </div>
            <div class="my-2">
                <label asp-for="CategoryId" class="mb-3">Category</label>
                <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-select">
                    <option disabled selected>--Select Category--</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-primary mb-2"></span>
            </div>                 
        <div class="row">
            <div class="my-2 col-6">
                <label asp-for="Price" class="mb-3">Product Price</label>
                <input asp-for="Price" class="form-control"/>                
                <span asp-validation-for="Price" class="text-primary mb-2"></span>
            </div>      
            <div class="my-2 col-6">
                <label asp-for="Quantity" class="mb-3">Quantity</label>
                <input asp-for="Quantity" class="form-control"/>                
                <span asp-validation-for="Quantity" class="text-primary mb-2"></span>
            </div>
        </div>                                                 
            <div class="my-2">
                <label asp-for="Image" class="mb-3">Upload Image</label>
                <input name="file" type="file" class="form-control"/>                
                @* <span asp-validation-for="Image" class="text-primary mb-2"></span> *@
            </div>         
        <div class="row mt-5">
            <span>
                
                <button type="submit" class="btn btn-success p-2 me-4"><i class="bi bi-plus-circle"></i>&nbsp; Update</button>
                
                <a asp-area="" asp-controller="Product" asp-action="AdminProductView">
                    <button type="button" class="btn btn-secondary p-2"><i class="bi bi-arrow-left-circle"></i>&nbsp; Back</button>
                </a>
            </span>
        </div>
        </form>
    </div>    
</body>