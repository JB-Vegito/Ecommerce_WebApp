@model Category;
@{
    ViewData["Title"] = "Admin - Category Delete";
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/bootsWatch.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    @* <link rel="stylesheet" href="~/ecommerce_web.styles.css" asp-append-version="true" /> *@
    <style>
        span a{
            margin-right:2rem;
        }
    </style>
</head>
<body>
    <partial name="_AdminNavbar"/>
    <div class="container border border-secondary pt-4 pb-5 px-5 mt-5" style="border-radius:5px; box-shadow: 10px 10px lightgrey;">
        <h1 class="row">Delete Category</h1>
        <hr class="mb-5 ">
        <form method="post">
            <div>
                <label asp-for="CategoryId" class="mb-3">Category ID</label>
                <input asp-for="CategoryId" class="form-control" readonly/>
                <span asp-validation-for="CategoryId" class="text-primary mb-2"></span>
            </div>
            <div>
                <label asp-for="CategoryName" class="mb-3">Category Name</label>
                <input asp-for="CategoryName" class="form-control" readonly/>                
                <span asp-validation-for="CategoryName" class="text-primary mb-2"></span>
            </div>
        <div class="row mt-5">
            <span>
                
                <button type="submit" class="btn btn-primary p-2 me-4"><i class="bi bi-trash3-fill"></i>&nbsp; Delete</button>
                
                <a asp-area="" asp-controller="Category" asp-action="AdminCategoryView">
                    <button type="button" class="btn btn-secondary p-2"><i class="bi bi-arrow-left-circle"></i>&nbsp; Back</button>
                </a>
            </span>
        </div>
        </form>
    </div>    
</body>