@model IEnumerable<Category>;
@{
    ViewData["Title"] = "Admin - Category View";
    Layout = null;
}    
<head>
    <link rel="stylesheet" href="~/css/bootsWatch.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    @* <link rel="stylesheet" href="~/ecommerce_web.styles.css" asp-append-version="true" /> *@
    <style>
        span a{
            margin-right:2rem;
        }
    </style>
</head>
<body>
    <partial name="_AdminNavbar"/>    
    
    <div class="container pt-2 pb-5 px-5">
        <hr class="border border-dark border-1 ">
        <h1 class="mb-2 ms-3 row">Category</h1>
        <hr class="border border-dark border-1 ">
                <div class="row mb-4 mt-3" style=float:right;>
            <span>
                <a asp-area="" asp-controller="Category" asp-action="AdminCategoryAdd" style="text-decoration:none;">
                    <button class="btn btn-danger p-2"><i class="bi bi-plus-circle"></i> &nbsp; Add Category</button>
                </a>
               
            </span>
        </div>  
        <table class="table table-hover table-bordered">
            <thead style="padding-bottom:10%">
                <tr class="table-dark">
                    <th scope="col">Category ID</th>
                    <th scope="col">Category Name</th>
                    <th ></th>
                    <th></th>
                </tr>            
            </thead>
            <tbody>
                @foreach(var category in Model){
                    <tr class="table-secondary">
                        <td>@category.CategoryId</td>
                        <td>@category.CategoryName</td>
                        <td style="width:15%; text-align:center; padding:1.2rem;">
                            <a asp-area="" asp-controller="Category" asp-action="AdminCategoryUpdate" asp-route-categoryid="@category.CategoryId" style="text-decoration:none;">
                            <button class="btn btn-success p-2"><i class="bi bi-wrench-adjustable-circle"></i> &nbsp; Update</button>
                            </a>                            
                        </td>      
                        <td style="width:15%; text-align:center; padding:1.2rem;">
                            <a asp-area="" asp-controller="Category" asp-action="AdminCategoryDelete" asp-route-categoryid="@category.CategoryId" style="text-decoration:none;">
                                <button class="btn btn-primary p-2"><i class="bi bi-trash3-fill"></i> &nbsp; Delete</button>
                            </a>  
                        </td>              
                    </tr>
                }
            </tbody>
        </table>     
    </div>
</body>