@model IEnumerable<Orders>;
@{
    ViewData["Title"] = "Order List";
    Layout = null;
}    
<head>
    <link rel="stylesheet" href="~/css/bootsWatch.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    @* <link rel="stylesheet" href="~/ecommerce_web.styles.css" asp-append-version="true" /> *@
    <style>
        span a{
            margin-right:2rem;
        }
    </style>
    <title>@ViewData["Title"]</title>
</head>
<body>
    @* <partial name="_AdminNavbar"/>     *@
    
    <div class="container pt-5 pb-5 px-5">
        <hr class="border border-dark border-1 ">
        <h1 class="mb-2 ms-3 row">Orderlist</h1>
        <hr class="border border-dark border-1 "> 
        <table class="table table-hover table-bordered mt-5">
            <thead style="padding-bottom:10%">
                <tr class="table-dark">
                    <th scope="col">Product Name</th>
                    <th scope="col">Quantity</th>
                </tr>            
            </thead>
            <tbody>
                @foreach(var order in Model){
                    <tr class="table-secondary">
                        <td>@order.Inventory.Name</td>
                        <td>@order.Item_Quantity</td>             
                    </tr>
                }
            </tbody>
        </table>     
    </div>
</body>